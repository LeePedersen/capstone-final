<%= render 'layouts/contacts' %>

<div class='users'>

  <h2>Users</h2>

  <% if @users %>
    <% @users.each do |user| %>
      <% if user.id != @user.id %>
        <div class='contact'>
          <p><span class='dot'><%= user.username[0] %></span><%= user.username %> <%= link_to 'Message me!', conversations_path(user1_id: current_user.id, user2_id: user.id), method: 'post'%></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
