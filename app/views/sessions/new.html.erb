<div class='sign-page'>

  <div class='sign-form'>
    <h1>Sign in</h1>
    <%= form_tag signin_path do %>
      <p><%= label_tag :email %>
      <%= text_field_tag :email %></p>
      <p><%= label_tag :password %>
      <%= password_field_tag :password %></p>
      <br>
      <%= submit_tag "Sign in" %>
    <% end %>
  </div>
</div>
